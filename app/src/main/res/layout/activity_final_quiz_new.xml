<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.myCPE.activity.ActivityFinalQuiz" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_rounded_grayblue">

        <RelativeLayout
            android:id="@+id/rvtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/color_rounded_grayblue">

            <RelativeLayout
                android:id="@+id/relImgBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/back"
                    android:tint="@color/color_text_black" />

            </RelativeLayout>

            <com.myCPE.view.CustomTextView
                android:id="@+id/screentitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_final_quiz"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_15sdp"
                app:font_text="Whitney-Semibold.ttf" />

            <ImageView
                android:id="@+id/ivnotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bell"
                android:visibility="gone" />

        </RelativeLayout>

        <!--<RelativeLayout
            android:id="@+id/rvtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/webinar_status"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/back" />

            <com.myCPE.view.CustomTextView
                android:id="@+id/screentitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/str_final_quiz"
                android:textColor="@color/White"
                android:textSize="@dimen/_18sdp"
                app:font_text="Montserrat-Bold.ttf" />

        </RelativeLayout>-->

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvtitle"
            android:text="Questions 8/10"
            android:textColor="@color/color_text_blue"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/whitney_semibold"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_number"
            android:layout_marginBottom="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:elevation="@dimen/_15sdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_55sdp"
                android:paddingTop="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerVertical="true"
                        android:maxLines="3"
                        android:text="The ERC is what percentage of qualifying wages:"
                        android:textColor="@color/black_full"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/whitney_semibold"/>

                    <LinearLayout
                        android:id="@+id/lv_a"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white_boundry"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal" >

                        <!--<RelativeLayout
                            android:id="@+id/checkbox_select_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:background="@drawable/rev_unchecked" />-->

                        <TextView
                            android:id="@+id/tv_ans_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:ems="20"
                            android:maxLines="2"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:textColor="@color/color_text_black_oppacity"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/whitney_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_b"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white_boundry"
                        android:layout_marginTop="@dimen/_10sdp">

                        <!--<RelativeLayout
                            android:id="@+id/checkbox_select_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:background="@drawable/rev_unchecked" />-->

                        <TextView
                            android:id="@+id/tv_ans_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:ems="20"
                            android:maxLines="2"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:textColor="@color/color_text_black_oppacity"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/whitney_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_c"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white_boundry"
                        android:layout_marginTop="@dimen/_10sdp">

                        <!--<RelativeLayout
                            android:id="@+id/checkbox_select_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:background="@drawable/rev_unchecked" />-->

                        <TextView
                            android:id="@+id/tv_ans_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:ems="20"
                            android:maxLines="2"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:textColor="@color/color_text_black_oppacity"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/whitney_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_d"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white_boundry"
                        android:layout_marginTop="@dimen/_10sdp">

                        <!--<RelativeLayout
                            android:id="@+id/checkbox_select_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:background="@drawable/rev_unchecked" />-->

                        <TextView
                            android:id="@+id/tv_ans_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:ems="20"
                            android:maxLines="2"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:textColor="@color/color_text_black_oppacity"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/whitney_medium" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_response_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:ems="20"
                        android:text="@string/why_correct"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="gone"
                        android:fontFamily="@font/whitney_semibold"/>

                    <TextView
                        android:id="@+id/tv_ans_response"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="20"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/color_text_black_oppacity"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone"
                        android:fontFamily="@font/whitney_medium" />

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/linBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/relPrev"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_login">

                    <TextView
                        android:id="@+id/tv_prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Previous"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/whitney_semibold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relNextSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_signup">

                    <TextView
                        android:id="@+id/tv_next_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Next"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/whitney_semibold"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_final_quiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relbottom"
            android:layout_below="@+id/rvtitle"
            android:background="@color/White"
            android:clipToPadding="false"
            android:visibility="gone"
            android:paddingBottom="@dimen/_70sdp">

        </android.support.v7.widget.RecyclerView>

        <com.myCPE.view.CustomTextView
            android:id="@+id/tv_nodatafound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_data_found"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp"
            android:visibility="gone"
            app:font_text="Montserrat-Medium.ttf" />

        <RelativeLayout
            android:id="@+id/relbottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/webinar_status"
            android:visibility="gone">

            <com.myCPE.view.CustomTextView
                android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_submit"
                android:textColor="@color/White"
                android:textSize="@dimen/_18sdp"
                android:letterSpacing="0.08"
                app:font_text="Montserrat-Bold.ttf" />

        </RelativeLayout>

    </RelativeLayout>

</layout>