<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/final_quiz_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/str_fail_msg"
            android:textColor="@color/wrong_ans"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/whitney_medium" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/str_final_ok"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/rounded_login"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/whitney_bold" />

    </LinearLayout>

</RelativeLayout>