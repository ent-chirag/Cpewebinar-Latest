<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/final_quiz_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--<com.entigrity.view.CustomTextView
            android:id="@+id/popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/str_final_quiz"
            android:textColor="@color/color_title_popup"
            android:letterSpacing="0.08"
            android:textSize="@dimen/_18sdp"
            app:font_text="Montserrat-SemiBold.ttf" />-->

        <com.entigrity.view.CustomTextView
            android:id="@+id/popup_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/str_fail_msg"
            android:textColor="@color/wrong_ans"
            android:textSize="@dimen/_12sdp"
            android:letterSpacing="0.05"
            app:font_text="Montserrat-Light.ttf" />

        <com.entigrity.view.CustomTextView
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/str_final_ok"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:gravity="center"
            android:background="@drawable/btn_bg"
            android:layout_margin="@dimen/_20sdp"
            app:font_text="Montserrat-SemiBold.ttf" />

    </LinearLayout>

</RelativeLayout>