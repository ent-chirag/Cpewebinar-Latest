                    android:layout_marginLeft="@dimen/_10sdp"
                    android:button="@drawable/checkbox_question_selection"
                    android:enabled="false" />-->

                <RelativeLayout
                    android:id="@+id/checkbox_select_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rev_unchecked"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_ans_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:ems="20"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:singleLine="true"
                    android:text="Hello"
                    android:textColor="@color/subcategory_topics"
                    android:textSize="@dimen/_11sdp"
                    app:font_text="Montserrat-Medium.ttf" />


            </LinearLayout>

            <com.myCPE.view.CustomTextView
                android:id="@+id/tv_ans_response_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:ems="20"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textColor="@android:color/holo_green_light"
                android:visibility="gone"
                android:textSize="@dimen/_11sdp"
                app:font_text="Montserrat-Medium.ttf" />

            <LinearLayout
                android:id="@+id/lv_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
