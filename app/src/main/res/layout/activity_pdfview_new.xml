<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.myCPE.activity.PdfViewActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/relRawLogin"
            android:layout_marginBottom="@dimen/_30sdp">

            <RelativeLayout
                android:id="@+id/rvtitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/color_rounded_grayblue"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/back"
                    android:tint="@color/color_text_black" />

                <com.myCPE.view.CustomTextView
                    android:id="@+id/screentitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_14sdp"
                    app:font_text="Whitney-Semibold.ttf" />

                <ImageView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_share_svg"
                    android:visibility="visible" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rvtitle"
                android:background="@color/color_text_black" />

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relRawLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtpassword"
            android:layout_alignParentBottom="true"
            android:background="@color/White"
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_marginRight="@dimen/_22sdp"
            android:layout_marginBottom="@dimen/_100sdp">

            <com.myCPE.view.CustomTextView
                android:id="@+id/txtSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_handout_value"
                android:textColor="@color/card_text_number_color"
                android:textSize="@dimen/_22sdp"
                app:font_text="Whitney-Black.ttf" />

            <RelativeLayout
                android:id="@+id/iv_Download"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circular_button_orange">

                <RelativeLayout
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:background="@drawable/ic_download_svg"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>