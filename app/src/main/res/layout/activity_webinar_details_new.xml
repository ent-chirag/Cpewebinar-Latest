<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WebinarDetailsActivityNew">

    <RelativeLayout
        android:id="@+id/rvtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_51sdp"
        android:background="@color/color_rounded_grayblue">

        <RelativeLayout
            android:id="@+id/relImgBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/back"
                android:tint="@color/color_text_black" />

        </RelativeLayout>

        <com.myCPE.view.CustomTextView
            android:id="@+id/screentitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_home_title_detail"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/_15sdp"
            app:font_text="Whitney-Semibold.ttf" />

        <ImageView
            android:id="@+id/ivnotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_bell"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_svg"
            android:layout_toLeftOf="@+id/ivnotification"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_15sdp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/rvtitle"
        android:layout_above="@+id/rvbottom">

        <RelativeLayout
            android:id="@+id/relLiveWebinar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@color/color_rounded_btn_orange">

            <TextView
                android:id="@+id/txtLiveWebinarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relDataCredit"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_45sdp"
                android:ellipsize="end"
                android:fontFamily="@font/whitney_bold"
                android:maxLines="3"
                android:text="Ethics for Tax professionals (Latest 2020)"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/txtLiveWebinarAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLiveWebinarTitle"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_110sdp"
                android:ellipsize="end"
                android:fontFamily="@font/whitney_semibold"
                android:maxLines="2"
                android:text="Josh Malancuk, CPA"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtWebinarDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLiveWebinarAuthor"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_110sdp"
                android:ellipsize="end"
                android:fontFamily="@font/whitney_medium"
                android:maxLines="2"
                android:text="04 Jun, 02:00 PM EDT"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/imgUserModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/user_model" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relOnDemandWebinar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvtitle">

            <ImageView
                android:id="@+id/ivthumbhel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="fitXY"
                android:src="@mipmap/webinar_placeholder"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/play_icon" />

            <FrameLayout
                android:id="@+id/video_layout"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@android:color/black"
                android:visibility="gone">

                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/exoplayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:use_controller="true" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rvbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@color/White"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/linTags"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <com.myCPE.view.CustomButtonView
                android:id="@+id/tv_rv_questions"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/tv_webinar_status"
                android:layout_weight="1"
                android:background="@drawable/squrebutton_webinar_status"
                android:letterSpacing="0.05"
                android:text="@string/str_review_question_lable"
                android:textColor="@color/White"
                android:textSize="@dimen/_8sdp"
                app:font_button="Montserrat-Bold.ttf" />

            <LinearLayout
                android:id="@+id/rel_webinar_status_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/squrebutton_webinar_status"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_play_icon_new"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/ic_play"
                    android:backgroundTint="@android:color/white"
                    android:visibility="visible" />

                <!--                    <com.entigrity.view.CustomButtonView-->
                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_webinar_status_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/squrebutton_webinar_status"
                    android:letterSpacing="0.05"
                    android:text="WATCH NOW"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_8sdp"
                    app:font_text="Montserrat-Bold.ttf" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_webinar_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/squrebutton_webinar_status"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textColor="@color/White"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_play_icon"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/tv_webinar_status"
                android:background="@drawable/ic_play"
                android:backgroundTint="@android:color/white"
                android:visibility="gone" />

            <com.myCPE.view.CustomTextView
                android:id="@+id/tv_webinar_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:letterSpacing="0.08"
                android:text=""
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp"
                app:font_text="Montserrat-Bold.ttf" />

        </LinearLayout>

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/ivfavorite"
            android:src="@mipmap/round_share_icon" />-->

        <ImageView
            android:id="@+id/ivfavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@mipmap/round_like_icon_one"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>