<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.myCPE.webinarDetail.ReviewQuestionsFragment" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/rev_number_round"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="Montserrat-Bold.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/tv_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLines="3"
                        android:textColor="@color/black_full"
                        android:textSize="@dimen/_10sdp"
                        app:font_text="Montserrat-Medium.ttf" />


                    <LinearLayout
                        android:id="@+id/lv_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">

                        <RelativeLayout
                            android:id="@+id/checkbox_select_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rev_unchecked"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"/>

                        <com.myCPE.view.CustomTextView
                            android:id="@+id/tv_ans_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:ems="20"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:singleLine="true"
                            android:text="Hello"
                            android:textColor="@color/subcategory_topics"
                            android:textSize="@dimen/_9sdp"
                            app:font_text="Montserrat-Medium.ttf" />


                    </LinearLayout>

                    <!--<com.myCPE.view.CustomTextView
                        android:id="@+id/tv_ans_response_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ems="20"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:textColor="@android:color/holo_green_light"
                        android:visibility="gone"
                        android:textSize="@dimen/_11sdp"
                        app:font_text="Montserrat-Medium.ttf" />-->

                    <LinearLayout
                        android:id="@+id/lv_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">

                        <RelativeLayout
                            android:id="@+id/checkbox_select_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rev_unchecked"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"/>

                        <com.myCPE.view.CustomTextView
                            android:id="@+id/tv_ans_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:ems="20"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:singleLine="true"
                            android:textColor="@color/subcategory_topics"
                            android:textSize="@dimen/_9sdp"
                            app:font_text="Montserrat-Medium.ttf" />


                    </LinearLayout>

                    <!--<com.myCPE.view.CustomTextView
                        android:id="@+id/tv_ans_response_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ems="20"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:textColor="@android:color/holo_green_light"
                        android:visibility="gone"
                        android:textSize="@dimen/_11sdp"
                        app:font_text="Montserrat-Medium.ttf" />-->

                    <LinearLayout
                        android:id="@+id/lv_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">

                        <RelativeLayout
                            android:id="@+id/checkbox_select_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rev_unchecked"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"/>

                        <com.myCPE.view.CustomTextView
                            android:id="@+id/tv_ans_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:ems="20"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:singleLine="true"
                            android:textColor="@color/subcategory_topics"
                            android:textSize="@dimen/_9sdp"
                            app:font_text="Montserrat-Medium.ttf" />


                    </LinearLayout>

                    <!--<com.myCPE.view.CustomTextView
                        android:id="@+id/tv_ans_response_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ems="20"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:textColor="@android:color/holo_green_light"
                        android:visibility="gone"
                        android:textSize="@dimen/_11sdp"
                        app:font_text="Montserrat-Medium.ttf" />-->

                    <LinearLayout
                        android:id="@+id/lv_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">

                        <RelativeLayout
                            android:id="@+id/checkbox_select_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rev_unchecked"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"/>

                        <com.myCPE.view.CustomTextView
                            android:id="@+id/tv_ans_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:ems="20"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:singleLine="true"
                            android:textColor="@color/subcategory_topics"
                            android:textSize="@dimen/_9sdp"
                            app:font_text="Montserrat-Medium.ttf" />


                    </LinearLayout>

                    <!--<com.myCPE.view.CustomTextView
                        android:id="@+id/tv_ans_response_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ems="20"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@android:color/holo_green_light"
                        android:visibility="gone"
                        android:textSize="@dimen/_11sdp"
                        app:font_text="Montserrat-Medium.ttf" />-->

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/tv_response_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ems="20"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/subcategory_topics"
                        android:visibility="gone"
                        android:textSize="@dimen/_11sdp"
                        app:font_text="Montserrat-SemiBold.ttf" />

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/tv_ans_response"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ems="20"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/feedback_field"
                        android:visibility="gone"
                        android:textSize="@dimen/_9sdp"
                        app:font_text="Montserrat-Medium.ttf" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/relPrev"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@color/webinar_status">

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/tv_prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Previous"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        android:layout_centerInParent="true"
                        app:font_text="Montserrat-Medium.ttf" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relNextSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@color/webinar_status">

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/tv_next_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        android:layout_centerInParent="true"
                        app:font_text="Montserrat-Medium.ttf" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>