<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.myCPE.activity.SignUpActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/relTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_24sdp"
                android:src="@mipmap/back"
                android:tint="@color/black" />

            <RelativeLayout
                android:id="@+id/relImgBack"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/str_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/str_signup_n"
                android:textColor="@color/black_full"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/whitney_semibold" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTitle"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:text="@string/str_register_yourself"
                    android:textColor="@color/theme_background"
                    android:textSize="@dimen/_22sdp"
                    android:fontFamily="@font/whitney_bold" />

                <EditText
                    android:id="@+id/edt_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_first_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/edt_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_last_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/edt_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_email_id"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_phone_number"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:drawableRight="@mipmap/password_eys"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_reg_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/edt_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:drawableRight="@mipmap/password_eys"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <RelativeLayout
                    android:id="@+id/relCountry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <TextView
                        android:id="@+id/txtCountryName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/underline_bg"
                        android:fontFamily="@font/whitney_semibold"
                        android:text="@string/view_profile_country"
                        android:imeOptions="actionNext"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:textColor="@color/color_text_black"
                        android:textColorHint="@color/edit_field_hint"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@mipmap/drop_down_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relState"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <TextView
                        android:id="@+id/txtStateName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/underline_bg"
                        android:fontFamily="@font/whitney_semibold"
                        android:text="@string/view_profile_state"
                        android:imeOptions="actionNext"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:textColor="@color/color_text_black"
                        android:textColorHint="@color/edit_field_hint"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@mipmap/drop_down_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relCity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <TextView
                        android:id="@+id/txtCityName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/underline_bg"
                        android:fontFamily="@font/whitney_semibold"
                        android:text="@string/view_profile_city"
                        android:imeOptions="actionNext"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:textColor="@color/color_text_black"
                        android:textColorHint="@color/edit_field_hint"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@mipmap/drop_down_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relRawLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtpassword"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_50sdp">

                    <TextView
                        android:id="@+id/txtSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_next"
                        android:textColor="@color/card_text_number_color"
                        android:textSize="@dimen/_22sdp"
                        android:fontFamily="@font/whitney_black" />

                    <RelativeLayout
                        android:id="@+id/relNext"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/circular_button_orange">

                        <RelativeLayout
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_arrow_right_max" />

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:text="@string/str_signin_ul"
                    android:textColor="@color/theme_background"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:fontFamily="@font/whitney_bold" />

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/relCountryView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/linPopup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_100sdp"
                android:background="@drawable/rounded_top_bluegray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <TextView
                        android:id="@+id/txtPopupCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="@string/str_cancel_guest"
                        android:textColor="@color/black_full"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/whitney_semibold" />

                    <TextView
                        android:id="@+id/txtPopupCName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="@string/view_profile_country"
                        android:textColor="@color/black_full"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/whitney_bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_full" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopupCountryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:background="@color/color_bg"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopupStateList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:background="@color/color_bg"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopupCityList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:background="@color/color_bg"
                    android:visibility="gone"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>