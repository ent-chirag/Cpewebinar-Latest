<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.myCPE.fragments.MyWebinarFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <RelativeLayout
            android:id="@+id/rvtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/color_rounded_grayblue"
            android:padding="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/relSection1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.myCPE.view.CustomTextView
                    android:id="@+id/screentitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/str_my_webinar_small"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_14sdp"
                    app:font_text="Whitney-Semibold.ttf" />

                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivnotification"
                    android:paddingRight="@dimen/_12sdp"
                    android:src="@drawable/ic_search_svg"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivnotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_bell"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvtitle1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@color/color_rounded_grayblue"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone">

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_toLeftOf="@+id/txtCancel"
                    android:background="@drawable/rounded_bg_gray_blue"
                    android:backgroundTint="@color/color_search_gray_bg"
                    android:drawableLeft="@drawable/ic_search_gray_svg"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/whitney_medium"
                    android:gravity="center|left"
                    android:hint="@string/str_search"
                    android:imeOptions="actionSearch"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/txtCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="Cancel"
                    android:textColor="@color/theme_background"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/whitney_medium"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rvtitle"
            android:background="@color/black_full" />

        <HorizontalScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:paddingTop="@dimen/_9sdp"
            android:paddingBottom="@dimen/_9sdp"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/tag_unselected"
                    android:fontFamily="@font/whitney_medium"
                    android:gravity="center"
                    android:minWidth="@dimen/_70sdp"
                    android:text="@string/str_my_completed"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/btn_self_study_webinar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/tag_unselected"
                    android:fontFamily="@font/whitney_medium"
                    android:gravity="center"
                    android:minWidth="@dimen/_70sdp"
                    android:text="@string/str_my_selfstudy"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/btn_upcomingwebinar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/tag_selected"
                    android:fontFamily="@font/whitney_medium"
                    android:gravity="center"
                    android:minWidth="@dimen/_70sdp"
                    android:text="@string/str_my_upcoming"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/btn_pending_evolution"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/tag_unselected"
                    android:fontFamily="@font/whitney_medium"
                    android:gravity="center"
                    android:minWidth="@dimen/_70sdp"
                    android:text="@string/str_my_pending_evaluation"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/btn_didnot_attend"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/tag_unselected"
                    android:fontFamily="@font/whitney_medium"
                    android:gravity="center"
                    android:minWidth="@dimen/_70sdp"
                    android:text="@string/str_my_didnt_attend"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/btn_pollmissout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/tag_unselected"
                    android:fontFamily="@font/whitney_medium"
                    android:gravity="center"
                    android:minWidth="@dimen/_70sdp"
                    android:text="@string/str_my_pollmissedout"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </HorizontalScrollView>

