<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.myCPE.activity.SignUpNextActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/relTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_24sdp"
                android:src="@mipmap/back"
                android:tint="@color/black" />

            <RelativeLayout
                android:id="@+id/tvback"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/str_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/whitney_semibold"
                android:text="@string/str_signup_n"
                android:textColor="@color/black_full"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTitle"
            android:background="@color/color_bg"
            android:layout_marginBottom="@dimen/_5sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/input_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">-->

                <EditText
                    android:id="@+id/edt_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/view_profile_zipcode"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/input_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp">-->

                <EditText
                    android:id="@+id/edt_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_mobil_number"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/input_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp">-->

                <EditText
                    android:id="@+id/edt_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/str_firm_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/input_ptin_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_2sdp">-->

                <EditText
                    android:id="@+id/edt_ptin_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/view_profile_ptin_number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">-->

                <EditText
                    android:id="@+id/edt_CTEC_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:fontFamily="@font/whitney_semibold"
                    android:hint="@string/view_profile_ctec_id"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textColor="@color/color_text_black"
                    android:textColorHint="@color/edit_field_hint"
                    android:textSize="@dimen/_13sdp" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <Spinner
                        android:id="@+id/spinner_job_titile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtJobTitleName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/underline_bg"
                        android:fontFamily="@font/whitney_semibold"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:text="Job Title"
                        android:textColor="@color/color_text_black"
                        android:textColorHint="@color/edit_field_hint"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@mipmap/drop_down_arrow" />

                </RelativeLayout>

                <!--<View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@color/view_edit_profile" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <Spinner
                        android:id="@+id/spinner_industry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtIndustryName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/underline_bg"
                        android:fontFamily="@font/whitney_semibold"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:text="Industry"
                        android:textColor="@color/color_text_black"
                        android:textColorHint="@color/edit_field_hint"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@mipmap/drop_down_arrow" />

                </RelativeLayout>

                <!--<View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@color/view_edit_profile" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <ImageView
                        android:id="@+id/imgAddProfCreds"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_add_tag_svg"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/professional_credential"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/whitney_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/str_profestional_credential"
                        android:minHeight="@dimen/_50sdp"
                        android:textColor="@color/edit_field_hint"
                        android:textSize="@dimen/_13sdp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupProfCreds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/professional_credential"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_minus30sdp"
                        android:minHeight="@dimen/_50sdp" />

                    <LinearLayout
                        android:id="@+id/lv_professional_credential"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@+id/professional_credential"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_professional_credential"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/rounded_login"
                            android:fontFamily="@font/whitney_medium"
                            android:gravity="center"
                            android:minWidth="@dimen/_80sdp"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/str_handout_value"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_12sdp"
                            app:font_text="SFUIDisplay-Medium.ttf" />

                        <TextView
                            android:id="@+id/tv_professional_credential_more"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_login"
                            android:fontFamily="@font/whitney_medium"
                            android:gravity="center"
                            android:minWidth="@dimen/_80sdp"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/str_handout_value"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_12sdp"
                            app:font_text="SFUIDisplay-Medium.ttf" />

                    </LinearLayout>

                </RelativeLayout>

                <!--<android.support.design.chip.Chip
                    android:id="@+id/chipGroupProfCreds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_50sdp"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <ImageView
                        android:id="@+id/imgAddAdditionalQualification"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_add_tag_svg"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/additional_qualification"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:fontFamily="@font/whitney_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/str_additional_qualification"
                        android:textColor="@color/edit_field_hint"
                        android:textSize="@dimen/_13sdp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupAdditionalQualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/additional_qualification"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_minus30sdp"
                        android:minHeight="@dimen/_50sdp" />

                    <LinearLayout
                        android:id="@+id/lv_additional_qualification"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/additional_qualification"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_additional_qualification"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/rounded_login"
                            android:fontFamily="@font/whitney_medium"
                            android:gravity="center"
                            android:minWidth="@dimen/_80sdp"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/str_handout_value"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_12sdp"
                            app:font_text="SFUIDisplay-Medium.ttf" />


                        <TextView
                            android:id="@+id/tv_additional_qualification_more"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_login"
                            android:fontFamily="@font/whitney_medium"
                            android:gravity="center"
                            android:minWidth="@dimen/_80sdp"
                            android:padding="@dimen/_2sdp"
                            android:singleLine="true"
                            android:text="@string/str_handout_value"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_12sdp"
                            app:font_text="SFUIDisplay-Medium.ttf" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/check_box" />

                    <TextView
                        android:id="@+id/tv_terms_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/whitney_semibold"
                        android:text="@string/str_accepted"
                        android:textColor="@color/edit_field_hint"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tvterms_and_condtion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:fontFamily="@font/whitney_semibold"
                        android:text="@string/str_accepted_condition"
                        android:textColor="@color/sign_up_heading"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relRawLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtpassword"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_50sdp">

                    <TextView
                        android:id="@+id/txtSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/whitney_black"
                        android:text="@string/str_signup_n"
                        android:textColor="@color/card_text_number_color"
                        android:textSize="@dimen/_22sdp" />

                    <RelativeLayout
                        android:id="@+id/btnRegister"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/circular_button_orange">

                        <RelativeLayout
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_arrow_right_max" />

                    </RelativeLayout>

                </RelativeLayout>

                <!--<TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_100sdp"
                    android:fontFamily="@font/whitney_bold"
                    android:text="@string/str_signin_ul"
                    android:textColor="@color/theme_background"
                    android:textSize="@dimen/_12sdp" />-->

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_100sdp"
                    android:background="@drawable/ic_sign_in_txt_svg" />

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/relPopupView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/linPopup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/relBottom"
                android:layout_marginTop="@dimen/_100sdp"
                android:background="@drawable/rounded_top_bluegray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/txtPopupCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="@string/str_cancel_guest"
                        android:textColor="@color/black_full"
                        android:textSize="@dimen/_12sdp"
                        app:font_text="Whitney-Semibold.ttf" />

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/txtPopupTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="@string/str_profestional_credential"
                        android:textColor="@color/black_full"
                        android:textSize="@dimen/_14sdp"
                        app:font_text="Whitney-Bold.ttf" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_full" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopupList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_bg"
                    android:paddingTop="@dimen/_4sdp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopupAdditionalQualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_bg"
                    android:paddingTop="@dimen/_4sdp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopupJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_bg"
                    android:paddingTop="@dimen/_4sdp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopupIndustry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_bg"
                    android:paddingTop="@dimen/_4sdp"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_bg"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/relPopupSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/rounded_background_yellow_theme">

                    <com.myCPE.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="@string/str_submit_lower"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_14sdp"
                        app:font_text="Whitney-Bold.ttf" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>