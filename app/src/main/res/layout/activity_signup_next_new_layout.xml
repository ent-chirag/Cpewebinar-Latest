                    android:layout_alignParentLeft="true">-->


                <com.myCPE.view.CustomEditTextView
                    android:id="@+id/edt_CTEC_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg"
                    android:hint="@string/view_profile_ctec_id"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textColor="@color/grid_topics"
                    android:textSize="@dimen/_13sdp"
                    app:font_edit="SFUIDisplay-Medium.ttf" />


                <!--</android.support.design.widget.TextInputLayout>-->


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/underline_bg">

                    <Spinner
                        android:id="@+id/spinner_job_titile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@mipmap/drop_down_arrow" />

                </RelativeLayout>

                <!--<View
                    android:layout_width="fill_parent"
