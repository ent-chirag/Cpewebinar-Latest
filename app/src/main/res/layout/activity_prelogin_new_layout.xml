<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.myCPE.activity.PreLoginActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/lv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.myCPE.view.CustomTextView
                android:id="@+id/str_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/iv_forward"
                android:text="Skip"
                android:textColor="@color/black_full"
                android:textSize="@dimen/_14sdp"
                app:font_text="Whitney-Medium.ttf" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linBottomButton"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linBottomButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:weightSum="2">

            <com.myCPE.view.CustomTextView
                android:id="@+id/strlogin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_9sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/str_login_guest"
                android:textColor="@color/White"
                android:background="@drawable/rounded_login"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                app:font_text="Whitney-Bold.ttf" />

            <com.myCPE.view.CustomTextView
                android:id="@+id/strsignup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/str_signup_n"
                android:textColor="@color/White"
                android:background="@drawable/rounded_signup"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                app:font_text="Whitney-Bold.ttf" />

        </LinearLayout>

