<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.myCPE.fragments.MyCreditsFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rvtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/color_rounded_grayblue"
            android:padding="@dimen/_10sdp">

            <com.myCPE.view.CustomTextView
                android:id="@+id/screentitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_mycredit"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_14sdp"
                app:font_text="Whitney-Semibold.ttf" />

            <ImageView
                android:id="@+id/ivnotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bell"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_text_black"
            android:layout_below="@+id/rvtitle"/>

        <RelativeLayout
            android:id="@+id/rel_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvtitle"
            android:background="@color/White"
            android:orientation="vertical"
            android:visibility="gone">

            <com.myCPE.view.CustomTextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/my_credit_header_username"
                android:textSize="@dimen/_16sdp"
                app:font_text="Montserrat-SemiBold.ttf" />

            <com.myCPE.view.CustomTextView
                android:id="@+id/tv_useremailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/my_credit_header_email_id"
                android:textSize="@dimen/_12sdp"
                app:font_text="Montserrat-Medium.ttf" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lv_filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/rel_body"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/rounded_bg_gray_blue"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lv_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_bg_selection_darkblue"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/str_my_credit_all"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp"
                    app:font_text="Whitney-Semibold.ttf" />

            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/color_my_cretificate_menu_divider"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/lv_live"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_my_credit_live"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp"
                    app:font_text="Whitney-Semibold.ttf" />

            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/color_my_cretificate_menu_divider"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/lv_self_study"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_self_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/str_my_credit_self_study"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp"
                    app:font_text="Whitney-Semibold.ttf" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lv_filter"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_mycredit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_minus5sdp"
                android:paddingRight="@dimen/_minus2sdp"
                android:background="@color/White"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/_70sdp">

            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/tv_nodatafound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/whitney_semibold"
            android:text="@string/no_data_found"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true">

            <ProgressBar
                android:id="@+id/progressBar"
                android:indeterminateTint="@color/theme_background"
                android:indeterminateTintMode="src_atop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

        </FrameLayout>

    </RelativeLayout>

</layout>