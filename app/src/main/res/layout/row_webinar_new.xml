<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/relmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relConWatch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">

            <TextView
                android:id="@+id/txtContinueWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/whitney_semibold"
                android:layout_marginLeft="@dimen/_12sdp"
                android:text="@string/str_continue_watch"
                android:textColor="@color/color_text_black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_right_aroow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_12sdp"
                android:tint="@color/color_text_black"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvContinueWatch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_minus15sdp"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/relBGShapeCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/rounded_more_bg_gray_blue">

            <RelativeLayout
                android:id="@+id/relDataCredit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWebinarState"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_white_credit"
                    android:fontFamily="@font/whitney_semibold"
                    android:gravity="center"
                    android:minWidth="@dimen/_60sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Live"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvWebinarCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_white_credit"
                    android:fontFamily="@font/whitney_semibold"
                    android:gravity="center"
                    android:minWidth="@dimen/_60sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="1 CP"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvWebinarPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_white_credit"
                    android:fontFamily="@font/whitney_semibold"
                    android:gravity="center"
                    android:minWidth="@dimen/_60sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="$ 10"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtWebinarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relDataCredit"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_45sdp"
                android:ellipsize="end"
                android:fontFamily="@font/whitney_bold"
                android:maxLines="3"
                android:text="Ethics for Tax professionals (Latest 2020) Ethics for Tax professionals (Latest 2020)"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/txtWebinarAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtWebinarTitle"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_110sdp"
                android:ellipsize="end"
                android:fontFamily="@font/whitney_semibold"
                android:maxLines="2"
                android:text="Josh Malancuk, CPA"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtWebinarDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtWebinarAuthor"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_110sdp"
                android:ellipsize="end"
                android:fontFamily="@font/whitney_medium"
                android:maxLines="2"
                android:text="04 Jun, 02:00 PM EDT"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_10sdp" />

            <RelativeLayout
                android:id="@+id/relWebinarRegister"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_webinar_button">

                <TextView
                    android:id="@+id/txtWebinarRegistrationState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:fontFamily="@font/whitney_semibold"
                    android:text="Join Webinar"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_right_aroow" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imgUserModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/user_model" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/relmainOld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivwebinar_thumbhel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:scaleType="fitXY" />

            <FrameLayout
                android:id="@+id/rel_bg_score"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignBottom="@+id/ivwebinar_thumbhel"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivfavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_toLeftOf="@+id/tv_favorite_count"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/like"
                            android:visibility="gone" />

                        <com.myCPE.view.CustomTextView
                            android:id="@+id/tv_favorite_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone"
                            app:font_text="Montserrat-Medium.ttf" />

                        <ImageView
                            android:id="@+id/ivgroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/tv_attend_views"
                            android:src="@mipmap/group"
                            android:visibility="gone" />

                        <com.myCPE.view.CustomTextView
                            android:id="@+id/tv_attend_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone"
                            app:font_text="Montserrat-Medium.ttf" />

                    </RelativeLayout>

                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/relbottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivwebinar_thumbhel"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/ivmain"
                    android:visibility="gone" />

                <!--  <ImageView
                      android:id="@+id/ivmain"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:background="@mipmap/webinar_vertical_divider" />-->

                <View
                    android:id="@+id/ivmain"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/fav_date_time"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/ivmain">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.myCPE.view.CustomButtonView
                                android:id="@+id/tv_webinar_price_status"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_webinar_status"
                                android:textColor="@color/White"
                                android:textSize="@dimen/_9sdp"
                                app:font_button="Montserrat-Medium.ttf" />

                            <com.myCPE.view.CustomButtonView
                                android:id="@+id/credit_status"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_webinar_status"
                                android:textColor="@color/White"
                                android:textSize="@dimen/_9sdp"
                                app:font_button="Montserrat-Medium.ttf" />

                            <com.myCPE.view.CustomButtonView
                                android:id="@+id/tv_webinar_type"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_webinar_status"
                                android:textColor="@color/White"
                                android:textSize="@dimen/_9sdp"
                                app:font_button="Montserrat-Medium.ttf" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rel_speaker_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/iv_speaker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/home_webinar_user" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_speaker_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_toLeftOf="@+id/tv_rating_number"
                                android:layout_toRightOf="@+id/iv_speaker"
                                android:inputType="textNoSuggestions"
                                android:singleLine="true"
                                android:textColor="@color/home_tab_color_unselected"
                                android:textSize="@dimen/_10sdp"
                                app:font_text="OpenSans-Regular.ttf" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_rating_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_toLeftOf="@+id/iv_rating"
                                android:textColor="@color/webinar_status"
                                android:textSize="@dimen/_8sdp"
                                app:font_text="Montserrat-Bold.ttf" />

                            <ImageView
                                android:id="@+id/iv_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_toLeftOf="@+id/tv_rating_count" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_rating_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/home_tab_color_unselected"
                                android:textSize="@dimen/_8sdp"
                                app:font_text="Montserrat-Bold.ttf" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_company_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/iv_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/home_company" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_company_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/iv_company"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:textColor="@color/home_tab_color_unselected"
                                android:textSize="@dimen/_10sdp"
                                app:font_text="OpenSans-Regular.ttf" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_date_and_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/iv_clock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/home_clock" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_webinar_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/iv_clock"
                                android:inputType="textNoSuggestions"
                                android:textColor="@color/webinar_status"
                                android:textSize="@dimen/_10sdp"
                                app:font_text="OpenSans-Regular.ttf" />

                            <View
                                android:id="@+id/dv_divider"
                                android:layout_width="1dp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_toRightOf="@+id/tv_webinar_date"
                                android:background="@color/webinar_status" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_webinar_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/dv_divider"
                                android:textColor="@color/webinar_status"
                                android:textSize="@dimen/_10sdp"
                                app:font_text="OpenSans-Regular.ttf" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_timezone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/tv_webinar_time"
                                android:textColor="@color/webinar_status"
                                android:textSize="@dimen/_10sdp"
                                app:font_text="OpenSans-Regular.ttf" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_lable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:ems="11"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:textAllCaps="true"
                                android:textColor="@color/red_warning"
                                android:textSize="@dimen/_9sdp"
                                app:font_text="Montserrat-SemiBold.ttf" />

                            <com.myCPE.view.CustomTextView
                                android:id="@+id/tv_enrolled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/home_tab_color_unselected"
                                android:textSize="@dimen/_10sdp"
                                app:font_text="Montserrat-Bold.ttf" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relBottomButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <com.myCPE.view.CustomButtonView
                                android:id="@+id/webinar_status"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginRight="@dimen/_35sdp"
                                android:background="@drawable/rounded_webinar_home"
                                android:textColor="@color/White"
                                android:textSize="@dimen/_9sdp"
                                app:font_button="Montserrat-Medium.ttf" />

                            <ImageView
                                android:id="@+id/ivshare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toLeftOf="@+id/webinar_status"
                                android:padding="@dimen/_5sdp"
                                android:src="@mipmap/home_share" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_invisible"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/relbottom"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>