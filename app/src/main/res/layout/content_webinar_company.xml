<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_company_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivprofilepictureCompany"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textMultiLine"
                android:layout_toRightOf="@+id/ivprofilepictureCompany"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/whitney_semibold" />

            <TextView
                android:id="@+id/tv_company_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_company_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/ivprofilepictureCompany"
                android:autoLink="all"
                android:clickable="true"
                android:textColorLink="@color/theme_background"
                android:textColor="@color/color_text_black_80"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/whitney_medium" />

            <TextView
                android:id="@+id/tv_company_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivprofilepictureCompany"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/color_text_black_70"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/whitney_book" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
