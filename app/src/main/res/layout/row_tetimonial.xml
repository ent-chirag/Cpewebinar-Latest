<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lv_row_testimonial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_7sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_username_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/whitney_semibold"
            android:layout_toLeftOf="@+id/tv_date"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:textColor="@color/color_text_black_oppacity"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/whitney_medium" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_testimonial_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp" />

    <TextView
        android:id="@+id/tv_review_decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textColor="@color/color_text_black_70"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/whitney_book" />

    <View
        android:id="@+id/viewBlack"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone" />


</LinearLayout>