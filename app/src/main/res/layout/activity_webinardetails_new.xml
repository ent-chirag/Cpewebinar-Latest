<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.myCPE.activity.WebinarDetailsActivity" />
    </data>

    <RelativeLayout
        android:id="@+id/reltop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <RelativeLayout
            android:id="@+id/rvtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_51sdp"
            android:background="@color/color_rounded_grayblue">

            <RelativeLayout
                android:id="@+id/relImgBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/back"
                    android:tint="@color/color_text_black" />

            </RelativeLayout>

            <com.myCPE.view.CustomTextView
                android:id="@+id/screentitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_home_title_detail"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/_15sdp"
                app:font_text="Whitney-Semibold.ttf" />

            <ImageView
                android:id="@+id/ivshare"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivnotification"
                android:src="@drawable/ic_share_svg" />

            <ImageView
                android:id="@+id/ivnotification"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bell"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rvbottom"
            android:layout_below="@+id/rvtitle"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relLiveWebinar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="@color/color_rounded_btn_orange"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtLiveWebinarTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relDataCredit"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_55sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/whitney_bold"
                    android:maxLines="3"
                    android:text="Ethics for Tax professionals (Latest 2020)"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/txtLiveWebinarAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLiveWebinarTitle"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_110sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/whitney_semibold"
                    android:maxLines="2"
                    android:text="Josh Malancuk, CPA"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtWebinarDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLiveWebinarAuthor"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_110sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/whitney_medium"
                    android:maxLines="2"
                    android:text="04 Jun, 02:00 PM EDT"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/imgUserModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/user_model" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relSelfStudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rel_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivthumbhel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/webinar_placeholder"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/play_icon" />

                    <FrameLayout
                        android:id="@+id/video_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/black"
                        android:visibility="gone">

                        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                            android:id="@+id/exoplayer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            app:use_controller="true" />

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                    </FrameLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/ivthumbhelDummy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/webinar_placeholder"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtSelfStudyWebinarTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_view"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/whitney_bold"
                    android:maxLines="2"
                    android:text="Ethics for Tax professionals (Latest 2020)"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/txtSelfStudyWebinarAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSelfStudyWebinarTitle"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_110sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/whitney_semibold"
                    android:maxLines="2"
                    android:text="Josh Malancuk, CPA"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvwebinartitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_view"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/detail_heading"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rel_timezone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/tv_webinardate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:font_text="Montserrat-Regular.ttf" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tv_webinardate"
                        android:spinnerMode="dialog"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_watched_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <com.myCPE.view.CustomTextView
                        android:id="@+id/tv_watchedduration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:font_text="Montserrat-Bold.ttf" />

                </RelativeLayout>

                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_addtocalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_timezone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/str_add_to_calendar"
                    android:textColor="@color/webinar_detail_titile"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"
                    app:font_text="Montserrat-Bold.ttf" />

                <com.myCPE.view.CustomTextView
                    android:id="@+id/tv_error_msg_drag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_watched_duration"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:lineSpacingExtra="@dimen/_minus3sdp"
                    android:text="Please don’t fast forward or alter the cursor of the video. You must watch entire video to get your CPE credits."
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="gone"
                    app:font_text="Montserrat-Italic.ttf" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rvbottom"
                android:layout_below="@+id/rvwebinartitle"
                android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:visibility="gone"
                    app:tabGravity="center"
                    app:tabIndicatorColor="#1A406D"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="#1A406D"
                    app:tabTextAppearance="@style/MineCustomTabText"
                    app:tabTextColor="#9A9A9A" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tabs"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relDetails"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_details_ca"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="@dimen/_14sdp" />

                                <ImageView
                                    android:id="@+id/imgArrowDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:background="@drawable/ic_arrow_down_svg" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relDetailsContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <include layout="@layout/content_webinar_details_new" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relDescription"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_description_ca"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="@dimen/_14sdp" />

                                <ImageView
                                    android:id="@+id/imgArrowDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:background="@drawable/ic_arrow_down_svg" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relDescriptionContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <include layout="@layout/content_webinar_description" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linOverOfTopics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <RelativeLayout
                                android:id="@+id/relOverviewOfTopics"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtOverviewOfTopics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_overview_of_topics_ca"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="@dimen/_14sdp" />

                                <ImageView
                                    android:id="@+id/imgArrowOverviewOfTopics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:background="@drawable/ic_arrow_down_svg" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relOverviewOfTopicsContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <include layout="@layout/content_webinar_overview_of_content" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linWhoShouldAttend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <RelativeLayout
                                android:id="@+id/relWhoShouldAttend"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtWhoShouldAttend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_why_you_should_attend_ca"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="@dimen/_14sdp" />

                                <ImageView
                                    android:id="@+id/imgArrowWhoShouldAttend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:background="@drawable/ic_arrow_down_svg" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relWhoShouldAttendContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <include layout="@layout/content_webinar_why_should_attend" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linPresenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relPresenter"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtPresenter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_presenter_ca"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="@dimen/_14sdp" />

                                <ImageView
                                    android:id="@+id/imgArrowPresenter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:background="@drawable/ic_arrow_down_svg" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relPresenterContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <include layout="@layout/content_webinar_presenter" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linCompany"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relCompany"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtCompany"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_company_ca"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="@dimen/_14sdp" />

                                <ImageView
                                    android:id="@+id/imgArrowCompany"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:background="@drawable/ic_arrow_down_svg" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relCompanyContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <include layout="@layout/content_webinar_company" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linTestimonials"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relTestimonials"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtTestimonials"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_testimonials_ca"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="@dimen/_14sdp" />

                                <ImageView
                                    android:id="@+id/imgArrowTestimonials"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:background="@drawable/ic_arrow_down_svg" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relTestimonialsContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <include layout="@layout/content_webinar_testimonials" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linOthers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@drawable/rounded_bg_gray_blue"
                            android:minHeight="@dimen/_40sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relOthers"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp">

                                <TextView
                                    android:id="@+id/txtOthers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/whitney_semibold"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text="@string/str_others_ca"
